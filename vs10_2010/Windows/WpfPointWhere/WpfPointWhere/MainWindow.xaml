<Window x:Class="WpfPointWhere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="500" Loaded="Window_Loaded">
    <Grid Name="grdRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<WrapPanel Grid.Row="0">
			<Button Margin="5" Padding="5" Name="btnDrag" Content="Drag" Click="btnDrag_Click" />
			<Button Margin="5" Padding="5" Name="btnSystemInfo" Content="SystemInfo" Click="btnSystemInfo_Click" />
		</WrapPanel>
		<TabControl Grid.Row="1" Name="tbcInfo">
			<TabItem Header="tabDragInfo" Name="DragInfo">
				<Grid>
					<TextBox Name="txtDragInfo" TextWrapping="Wrap" IsReadOnlyCaretVisible="True" IsReadOnly="True" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" />
				</Grid>
			</TabItem>
			<TabItem Header="tabSystemInfo" Name="SystemInfo">
				<Grid>
					<TextBox Name="txtSystemInfo" TextWrapping="Wrap" IsReadOnlyCaretVisible="True" IsReadOnly="True" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" />
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
